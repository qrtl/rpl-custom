<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/group[1]" position="after">
                <group>
                    <group>
                        <field name="box_calc_type" widget="radio"/>
                        <button
                            name="recompute_product_packing"
                            string="Re-compute Packing Box"
                            type="object"
                            groups="base.group_user"
                            help="Press this button in case boxes need to be re-calculated due to changes in box definitions, etc."
                        />
                    </group>
                    <group>
                        <field name="box_line_ids" nolabel="1" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
