<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                <label for="packing_coefficient"/>
                <div class="o_row" name="packing_coefficient">
                    <field name="packing_coefficient"/>
                </div>
                <label for="product_packing_divison_id"/>
                <div class="o_row" name="product_packing_divison_id">
                    <field name="product_packing_divison_id"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
