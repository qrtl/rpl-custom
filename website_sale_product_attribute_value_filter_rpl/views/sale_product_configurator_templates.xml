<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="variants" inherit_id="sale.variants">
        <!-- for "select" -->
        <xpath
            expr="//t[@t-foreach=&quot;variant_id.product_template_value_ids&quot;]/option"
            position="attributes"
        >
            <attribute
                name="t-if"
            >not value_id.product_attribute_value_id.in_country_group_constraint()</attribute>
        </xpath>
        <!-- for "radio" -->
        <xpath
            expr="//t[@t-foreach=&quot;variant_id.product_template_value_ids&quot;]/li"
            position="attributes"
        >
            <attribute
                name="t-if"
            >not value_id.product_attribute_value_id.in_country_group_constraint()</attribute>
        </xpath>
        <!-- for "color" -->
        <xpath
            expr="//li[@t-foreach=&quot;variant_id.product_template_value_ids&quot;]/label"
            position="attributes"
        >
            <attribute
                name="t-if"
            >not value_id.product_attribute_value_id.in_country_group_constraint()</attribute>
        </xpath>
    </template>
</odoo>
