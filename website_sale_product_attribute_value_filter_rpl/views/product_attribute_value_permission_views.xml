<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_attribute_value_permission_tree_view" model="ir.ui.view">
        <field name="name">product.attribute.value.permission.tree</field>
        <field name="model">product.attribute.value.permission</field>
        <field name="arch" type="xml">
            <tree string="Product Attribute Value Permissions" editable="top">
                <field name="product_id"/>
                <field name="attribute_id"/>
                <field name="product_attribute_value_id" />
                <field name="allowed_country_group_ids" widget="many2many_tags"/>
                <field name="unallowed_country_group_ids" widget="many2many_tags"/>
                <field name="allowed_country_ids" widget="many2many_tags"/>
                <field name="unallowed_country_ids" widget="many2many_tags"/>
                <field name="allowed_partner_ids" widget="many2many_tags"/>
                <field name="unallowed_partner_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <record id="product_attribute_value_permission_action" model="ir.actions.act_window">
        <field name="name">Product Attribute Value Permissions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.attribute.value.permission</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
    </record>
    <menuitem id="menu_product_attribute_value_permission_action" action="product_attribute_value_permission_action"
              parent="sale.prod_config_main" groups="product.group_product_variant" sequence="3"/>
</odoo>
