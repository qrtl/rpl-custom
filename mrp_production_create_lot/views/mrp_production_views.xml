<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_mark_done']" position="before">
                <button name="action_create_new_lot" type="object" string="Create A New Lot" class="oe_highlight" 
                        attrs="{'invisible': ['|','|','|',('state','in',('done','cancel')),
                                              ('product_id','=',False),
                                              ('product_tracking','=','none'),
                                              ('new_lot_id','!=',False)
                                              ]}"/>
            </xpath>
            <xpath expr="//button[@name='open_produce_product'][1]" position="attributes">
                <attribute name="context">{"default_lot_id": new_lot_id}</attribute>
            </xpath>
            <xpath expr="//button[@name='open_produce_product'][2]" position="attributes">
                <attribute name="context">{"default_lot_id": new_lot_id}</attribute>
            </xpath>
            <xpath expr="//field[@name='bom_id']" position="after">
                <field name="product_tracking" invisible="1" />
                <field name="new_lot_id" attrs="{'invisible': [('product_tracking','=','none')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
