<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="external_layout_background" inherit_id="web.external_layout_background">
        <xpath expr="//div[@class='float-left company_address']" position="replace">
            <t t-if="company.company_name_address">
                <div class="float-left company_address">
                    <div t-field="company.company_name_address"/>
                </div>
            </t>
            <t t-if="not company.company_name_address">
                <div class="float-left company_address">
                    <div>
                        <strong t-field="company.partner_id.name"/>
                    </div>
                    <span t-field="company.partner_id"
                        t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                </div>
            </t>
        </xpath>
    </template>
    <template id="external_layout_boxed" inherit_id="web.external_layout_boxed">
        <xpath expr="//div[@name='company_address']" position="replace">
            <t t-if="company.company_name_address">
                <div t-field="company.company_name_address"/>
            </t>
            <t t-if="not company.company_name_address">
                <div name="company_address" class="mb4">
                <span class="company_address" t-field="company.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                </div>
            </t>
        </xpath>
    </template>
    <template id="external_layout_clean" inherit_id="web.external_layout_clean">
        <xpath expr="//div[@name='company_address']" position="replace">
            <t t-if="company.company_name_address">
                <div t-field="company.company_name_address"/>
            </t>
            <t t-if="not company.company_name_address">
                <div class="col-5 offset-1" name="company_address">
                    <ul class="list-unstyled">
                        <strong><li t-if="company.name"><span t-field="company.name"/></li></strong>
                        <li t-if="company.vat"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                        <li t-if="company.phone">Tel: <span t-field="company.phone"/></li>
                        <li t-if="company.email"><span t-field="company.email"/></li>
                        <li t-if="company.website"><span t-field="company.website"/></li>
                    </ul>
                </div>
            </t>
        </xpath>
    </template>
    <template id="external_layout_standard" inherit_id="web.external_layout_standard">
        <xpath expr="//div[@name='company_address']/div" position="replace">
            <t t-if="company.company_name_address">
                <div t-field="company.company_name_address"/>
            </t>
            <t t-if="not company.company_name_address">
                <div t-field="company.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                />
            </t>
        </xpath>
    </template>
</odoo>
