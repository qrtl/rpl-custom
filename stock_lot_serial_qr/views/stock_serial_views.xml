<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_stock_serial_form" model="ir.ui.view">
            <field name="name">view.stock.serial.form</field>
            <field name="model">stock.serial</field>
            <field name="arch" type="xml">
                <form string="Lot Serial Number"  create="false">
                    <sheet string="Lot Serial Number">
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="lot_id"/>
                                <field name="name"/>
                                <field name="quantity"/>
                            </group>
                            <group>
                                <field name="attachment_id"/>
                                <field name="qr_code_image" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_stock_serial_tree" model="ir.ui.view">
            <field name="name">view.stock.serial.tree</field>
            <field name="model">stock.serial</field>
            <field name="arch" type="xml">
                <tree string="Lot Serial Numbers" create="false" edit="false">
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <field name="name"/>
                    <field name="quantity"/>
                    <field name="qr_code_image" widget="image"/>
                </tree>
            </field>
        </record>

        <record id="view_stock_serial_select" model="ir.ui.view">
            <field name="name">view.stock.serial.search</field>
            <field name="model">stock.serial</field>
            <field name="arch" type="xml">
                <search string="Lot Serial Number">
                    <field name="name"/>
                    <field name="product_id"/>
                    <group expand="0" string="Group By">
                        <filter name="lot_id" string="Lot" context="{'group_by':'lot_id'}"/>
                        <filter name="product_id" string="Product" context="{'group_by':'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_stock_serial" model="ir.actions.act_window">
            <field name="name">Serial Numbers</field>
            <field name="res_model">stock.serial</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_lot_id': 'lot_id'}</field>
        </record>

        <menuitem id="menu_action_stock_serial"
                  name="Serial Numbers"
                  parent="stock.menu_stock_inventory_control"
                  sequence="10"
                  action="action_stock_serial" />

</odoo>
