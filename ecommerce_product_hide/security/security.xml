<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_category_rule_portal" model="ir.rule">
        <field name="name">Product - Category/Portal</field>
        <field ref="model_product_public_category" name="model_id" />
        <field name="domain_force">
            ["|",("partner_ids","=",False),("partner_ids","in",[user.partner_id.id])]
        </field>
        <field
            name="groups"
            eval="[(4, ref('base.group_portal')), (4, ref('base.group_public'))]"
        />
    </record>
    <record id="product_template_rule_portal_id" model="ir.rule">
        <field name="name">Product - Template/Portal</field>
        <field ref="product.model_product_template" name="model_id" />
        <field name="domain_force">["|",("is_public","=",True),
            ("public_categ_ids","in",user.commercial_partner_id.category_ids.ids)]
        </field>
        <field name="groups" eval="[(4, ref('base.group_portal')), (4, ref('base.group_public'))]"/>
    </record>
    <record id="product_product_rule_portal_id" model="ir.rule">
        <field name="name">Product - Product/Portal</field>
        <field ref="product.model_product_template" name="model_id" />
        <field name="domain_force">["|",("is_public","=",True),
            ("public_categ_ids","in",user.partner_id.category_ids.ids)]
        </field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]" />
    </record>
</odoo>
