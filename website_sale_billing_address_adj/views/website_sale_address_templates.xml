<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="payment" inherit_id="website_sale.payment">
        <xpath expr="//div[@id='shipping_and_billing']" position="replace">
            <div class="card-body" id="shipping_and_billing">
                <a class="float-right no-decoration" href="/shop/checkout">
                    <i class="fa fa-edit" /> Edit</a>
                <t
                    t-set="same_shipping"
                    t-value="bool(order.partner_shipping_id==order.partner_invoice_id or only_services)"
                />
                <div>
                    <b>Billing
                        <t
                            t-if="same_shipping and not only_services"
                        > &amp; Shipping</t>: </b>
                    <span
                        t-esc="order.partner_invoice_id"
                        t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')"
                        class="address-inline"
                    />
                </div>
                <div
                    t-if="not same_shipping and not only_services"
                    groups="sale.group_delivery_invoice_address"
                >
                    <b>Shipping: </b>
                    <span
                        t-esc="order.partner_shipping_id"
                        t-options="dict(widget='contact', fields=['address'], no_marker=True, separator=', ')"
                        class="address-inline"
                    />
                </div>
            </div>
        </xpath>
    </template>
    <template id="checkout" inherit_id="website_sale.checkout">
        <xpath
            expr="//div[@class='col-12 col-xl order-xl-1 oe_cart']/div/div"
            position="replace"
        >
        </xpath>
        <xpath
            expr="//div[@class='col-12 col-xl order-xl-1 oe_cart']/div[1]/div"
            position="replace"
        >
            <t t-if="order.partner_id != order.partner_invoice_id">
                <div class="col-lg-6">
                    <div>
                        <h3 class="o_page_header mt8">Billing Address</h3>
                    </div>
                    <div class="one_kanban">
                        <t t-call="website_sale.address_kanban">
                            <t t-set="actual_partner" t-value="order.partner_id" />
                            <t t-set="ship" t-value="order.partner_invoice_id" />
                            <t t-set="contact" t-value="order.partner_invoice_id" />
                            <t t-set="selected" t-value="1" />
                            <t t-set="readonly" t-value="1" />
                        </t>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
