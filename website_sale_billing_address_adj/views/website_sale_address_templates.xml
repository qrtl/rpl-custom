<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="payment" inherit_id="website_sale.payment">
        <xpath
            expr="//div[@id='shipping_and_billing']/t[@t-value='bool(order.partner_shipping_id==order.partner_id or only_services)']"
            position="attributes"
        >
            <attribute name="t-value">
                bool(order.partner_shipping_id==order.partner_invoice_id or only_services)
            </attribute>
        </xpath>
        <xpath
            expr="//div[@id='shipping_and_billing']/div/span[@t-esc='order.partner_id']"
            position="attributes"
        >
            <attribute name="t-esc">order.partner_invoice_id</attribute>
        </xpath>
    </template>
    <template id="checkout" inherit_id="website_sale.checkout">
        <xpath
            expr="//div[@class='col-12 col-xl order-xl-1 oe_cart']/div[@class='row']"
            position="replace"
        >
            <div class="row">
                <!--<div class="col-lg-12">-->
                <!--    <h3 class="o_page_header mt8">Billing Address</h3>-->
                <!--</div>-->
                <!--<div class="col-lg-6 one_kanban">-->
                <!--    <t t-call="website_sale.address_kanban">-->
                <!--        <t t-set="contact" t-value="order.partner_id"/>-->
                <!--<t t-set="contact" t-value="order.partner_invoice_id"/>-->
                <!--        <t t-set="selected" t-value="1"/>-->
                <!--        <t t-set="readonly" t-value="1"/>-->
                <!--    </t>-->
                <!--</div>-->
                <t t-if="order.partner_id != order.partner_invoice_id">
                    <div class="col-lg-6">
                        <div>
                            <h3 class="o_page_header mt8">Billing Address</h3>
                        </div>
                        <div class="one_kanban">
                            <t t-call="website_sale.address_kanban">
                                <t t-set="actual_partner" t-value="order.partner_id" />
                                <t t-set="ship" t-value="order.partner_invoice_id" />
                                <t t-set="contact" t-value="order.partner_invoice_id" />
                                <t t-set="selected" t-value="1" />
                                <t t-set="readonly" t-value="1" />
                            </t>
                        </div>
                    </div>
                </t>
                <div class="col-lg-6">
                    <div>
                        <t t-if="order.partner_id == order.partner_invoice_id">
                            <h3 class="o_page_header mt8">Billing Address</h3>
                        </t>
                        <t t-if="order.partner_id != order.partner_invoice_id">
                            <h3 class="o_page_header mt8">Your Address</h3>
                        </t>
                    </div>
                    <div class="one_kanban">
                        <t t-call="website_sale.address_kanban">
                            <t t-set="contact" t-value="order.partner_id" />
                            <t t-set="selected" t-value="1" />
                            <t t-set="readonly" t-value="1" />
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
