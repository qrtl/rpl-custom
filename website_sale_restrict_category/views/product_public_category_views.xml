<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_public_category_view_list" model="ir.ui.view">
        <field name="name">product.public.category.list</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_tree_view" />
        <field name="arch" type="xml">
            <field name="display_name" position="after">
                <field name="partner_ids" widget="many2many_tags" />
            </field>
        </field>
    </record>
    <record id="product_public_category_view_form" model="ir.ui.view">
        <field name="name">product.public.category.form</field>
        <field name="model">product.public.category</field>
        <field name="inherit_id" ref="website_sale.product_public_category_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div" position="after">
                <group>
                    <field name="partner_ids" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
