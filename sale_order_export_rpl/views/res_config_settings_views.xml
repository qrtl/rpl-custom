<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_ebay']" position="before">
                <h2>Sale Order Export (luxis)</h2>
                <div
                    class="row mt16 o_settings_container"
                    id="sale_order_export_settings"
                >
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        id="export_value_setting"
                    >
                        <div class="o_setting_right_pane">
                            <div class="text-muted">
                                Set the values in the order export file.
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label
                                        class="col-lg-3 o_light_label"
                                        for="luxis_status"
                                    />
                                    <field name="luxis_status" />
                                </div>
                                <div class="row mt16">
                                    <label
                                        class="col-lg-3 o_light_label"
                                        for="luxis_payment_id"
                                    />
                                    <field name="luxis_payment_id" />
                                </div>
                                <div class="row mt16">
                                    <label
                                        class="col-lg-3 o_light_label"
                                        for="luxis_ip_address"
                                    />
                                    <field name="luxis_ip_address" />
                                </div>
                                <div class="row mt16">
                                    <label
                                        class="col-lg-3 o_light_label"
                                        for="luxis_language"
                                    />
                                    <field name="luxis_language" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
