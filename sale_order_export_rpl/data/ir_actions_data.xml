<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_sale_order_csv" model="ir.actions.server">
        <field name="name">Export Order Data</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="sale.model_sale_order" />
        <field name="binding_model_id" ref="sale.model_sale_order" />
        <field name="state">code</field>
        <field name="code">action = records.export_order_csv()</field>
    </record>
    <record id="action_sale_order_line_csv" model="ir.actions.server">
        <field name="name">Export Order Line Data</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="sale.model_sale_order" />
        <field name="binding_model_id" ref="sale.model_sale_order" />
        <field name="state">code</field>
        <field name="code">action = records.export_order_line_csv()</field>
    </record>
</odoo>
